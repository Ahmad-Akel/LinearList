package gui;

import java.util.Arrays;
import java.util.function.Consumer;
import java.util.function.Supplier;
import javafx.collections.FXCollections;
import javafx.geometry.Insets;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Alert;
import javafx.scene.control.Button;
import javafx.scene.control.ComboBox;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.GridPane;
import javafx.scene.layout.VBox;
import javafx.stage.Modality;
import javafx.stage.Stage;
import javafx.stage.StageStyle;
import prostredky.Barva;
import prostredky.NakladniAutomobil;

/**
 *
 * @author Obadah Al Hariri
 */
public class DialogNakladniAutomobil extends Stage {

    private NakladniAutomobil nakladniAutomobil; // DopravniProstredek
    private boolean edit;
    private Consumer<NakladniAutomobil> outputOperation;

    private TextField spzTextField;
    private TextField hmotnostTextField;
    private ComboBox<Barva> barvaComboBox;
    private TextField kapacitaKontejneruTextField;

    public static DialogNakladniAutomobil factoryDialogOsobniAutomobil(Supplier<NakladniAutomobil> input, Consumer<NakladniAutomobil> output) {
        return new DialogNakladniAutomobil(input, output);
    }

    private DialogNakladniAutomobil(Supplier<NakladniAutomobil> input, Consumer<NakladniAutomobil> output) {
        // input
        edit = input != null;
        nakladniAutomobil = (edit) ? input.get() : new NakladniAutomobil();

        // output
        outputOperation = output;

        // general
        setTitle("Dialog Nakladní Automobil");
        setWidth(350);
        setHeight(400);
        initStyle(StageStyle.UTILITY);
        initModality(Modality.WINDOW_MODAL);
        setScene(createScene());

        // input
        if (edit) {
            set();
        }
    }

    private Scene createScene() {
        VBox root = new VBox();
        root.setAlignment(Pos.CENTER);
        root.setSpacing(20);

        GridPane gridPane = new GridPane();
        gridPane.setAlignment(Pos.CENTER);
        gridPane.setPadding(new Insets(10));
        gridPane.setHgap(10);
        gridPane.setVgap(10);

        int row = 0;

        spzTextField = addRowTextField(gridPane, "SPZ", row++);
        hmotnostTextField = addRowTextField(gridPane, "Hmotnost", row++);
        barvaComboBox = addRowComboBox(gridPane, "Barva", row++, Barva.values());
        kapacitaKontejneruTextField = addRowTextField(gridPane, "Kapacita Kontejneru", row++);

        Button ulozButton = new Button("Ulož");
        ulozButton.setOnAction(e -> {
            update();
            outputOperation.accept(nakladniAutomobil);
            close();
        });
        gridPane.add(ulozButton, 1, ++row);

        root.getChildren().addAll(gridPane);

        Scene scene = new Scene(root);
        return scene;
    }

    private static TextField addRowTextField(GridPane gridPane, String labelName, int row) {
        gridPane.add(new Label(labelName), 0, row);
        TextField textField = new TextField();
        gridPane.add(textField, 1, row);
        return textField;
    }

    private static <T> ComboBox<T> addRowComboBox(GridPane gridPane, String labelName, int row, Enum[] enumList) {
        gridPane.add(new Label(labelName), 0, row);
        ComboBox<T> comboBox = new ComboBox(FXCollections.observableList(Arrays.asList(enumList)));
        gridPane.add(comboBox, 1, row);
        return comboBox;
    }

    private void update() {
        try {
            nakladniAutomobil.setSpz(spzTextField.getText());
            nakladniAutomobil.setHmotnost(Double.valueOf(hmotnostTextField.getText()));
            nakladniAutomobil.setBarva(barvaComboBox.getValue());
            nakladniAutomobil.setKapacitaKontejneru(Integer.valueOf(kapacitaKontejneruTextField.getText()));
        } catch (NumberFormatException e) {
            new Alert(Alert.AlertType.ERROR, "Něco je prázdné").showAndWait();
        }
    }

    private void set() {
        spzTextField.setText(nakladniAutomobil.getSpz());
        hmotnostTextField.setText(String.valueOf(nakladniAutomobil.getHmotnost()));
        barvaComboBox.setValue(nakladniAutomobil.getBarva());
        kapacitaKontejneruTextField.setText(String.valueOf(nakladniAutomobil.getKapacitaKontejneru()));
    }

}
